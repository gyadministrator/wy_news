<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="switchText" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="dividerItemStyle">
        <item name="android:background">@color/divider_bg_color</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <declare-styleable name="CustomLoadingView">
        <attr name="loadingText" format="string" />
        <attr name="loadingSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="lineNum" format="integer" />
        <attr name="dividerMargin" format="dimension" />
    </declare-styleable>

    <style name="Theme.Launch" parent="Theme.AppCompat.Light.NoActionBar">
        <!--    设置背景，解决白屏的关键    -->
        <item name="android:windowBackground">@drawable/bg_launch</item>
        <!-- 设置状态栏为白色的，状态栏文字为黑的 -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <declare-styleable name="TitleBarView">
        <attr name="title" format="string" />
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="switch_bg_color" format="color" />
        <attr name="switch_ball_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomRefreshHeader">
        <attr name="textHeaderTipColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomRefreshFooter">
        <attr name="textFooterTipColor" format="color" />
    </declare-styleable>
</resources>