<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_over"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/unlock" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:src="@mipmap/close" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_lrc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/desktop_lrc_color"
        android:textSize="16sp"
        tools:text="123dsdsdsdssddsdsdsds123dsdsdsdssddsdsdsds123dsdsdsdssddsdsdsds123dsdsdsdssddsdsdsds123dsdsdsdssddsdsdsds" />
</LinearLayout>