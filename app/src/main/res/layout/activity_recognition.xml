<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_item_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.RecognitionActivity">

    <com.android.wy.news.view.TitleBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="识别歌曲" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_listen"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/listen"
                app:tint="@color/select_indicator_color"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_start_listen"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="@string/start_listen"
                android:textColor="@color/select_indicator_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/listen_tip"
                android:textColor="@color/main_title"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_listen_timer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/main_title"
                android:textSize="16sp"
                tools:text="识别中 0s" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>