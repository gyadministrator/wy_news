<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/main_bg_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/loading</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="android:windowSplashScreenBrandingImage">@mipmap/icon</item>
        <item name="postSplashScreenTheme">@style/Theme.AppCompat.Light.NoActionBar</item>
    </style>


    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">600dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>